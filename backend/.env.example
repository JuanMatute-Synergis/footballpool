# Backend Environment Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:4200

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# API Keys
BALLDONTLIE_API_KEY=your-balldontlie-api-key
SPORTSDB_API_KEY=your-sportsdb-api-key

# When true, the application will NOT create mock/fallback teams or schedules.
# Set to 'true' in production to avoid inserting fabricated data.
NO_MOCK_DATA=false

# Database
DATABASE_PATH=./database.sqlite

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
